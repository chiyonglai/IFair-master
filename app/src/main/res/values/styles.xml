<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="CoordinatorTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#FF757575</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="radio_button" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_selector</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <!-- 線條Style -->
    <style name="LineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <!-- 設定頁面，文字Style -->
    <style name="SettingTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">40dp</item>
    </style>

    <!-- 個人資料頁面，文字Style -->
    <style name="ProfileTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <!-- 個人資料頁面，輸入框Style -->
    <style name="ProfileEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- 登入，註冊 輸入匡，文字Style -->
    <style name="TextInputLayout" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
    </style>
    <!-- 輸入匡，文字Style -->
    <style name="TextInputLayoutBlack" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#000000</item>
    </style>
    <!-- 輸入視窗 Style -->
    <style name="MyEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/BlackTextInputLayout</item>
    </style>

    <!-- 預購 輸入匡，文字Style -->
    <style name="BlackTextInputLayout" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#5f5f5f</item>
    </style>

</resources>
