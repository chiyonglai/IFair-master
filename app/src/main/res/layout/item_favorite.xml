<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        cardCornerRadius="15dp"
        cardElevation="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_favorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/txt_new_product"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/txt_new_product"
                    android:gravity="center"
                    android:text="@string/magazine_new_product"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/txt_pre_orders_product"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/txt_new_product"
                    android:background="@drawable/txt_pre_order_product"
                    android:gravity="center"
                    android:text="@string/magazine_pre_orders_product"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="normal|bold" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/linear_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_favorite_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/color_text_black"
                    tools:text="asdasdasdasd"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="2dp"
                    android:background="@color/color_yellow"
                    android:layout_marginTop="7dp"/>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:layout_marginTop="7dp"
                    android:layout_gravity="center_horizontal">


                    <TextView
                        android:id="@+id/txt_favorite_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:textSize="12sp"
                        android:textColor="@color/color_text_gray"
                        android:lineSpacingExtra="@dimen/textView_space_width"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/txt_favorite_data_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:text="@string/favorite_more"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:textColor="@color/color_text_gray" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>